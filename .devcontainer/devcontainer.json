{
  "name": "eggs",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.flake8",
        "ms-python.black-formatter"
      ]
    }
  },
  "postCreateCommand": [
    "ssh-keyscan github.com >> ~/.ssh/known_hosts",
    "pip install -e .[dev]",
    "python --version && opencode --version || true"
  ],
  "remoteUser": "vscode",
  "containerEnv": {
    "OPENAI_BASE_URL": "https://ai.deprutser.be/v1",
    "OPENAI_API_KEY": "zi7shiosae8shuaD6Ang",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "mounts": [
    "source=${localEnv:HOME}/.config/opencode,target=/home/vscode/.config/opencode,type=bind,consistency=cached",
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
  ]
}
